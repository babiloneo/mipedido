<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.leonides.almacen.detalles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/det_nombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Nombre: "
            android:textSize="22dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/det_precio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Precio: "
            android:textSize="22dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/det_noserie"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="NoSerie:"
            android:textSize="22dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/det_stock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Stock:"
            android:textSize="22dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Entradas:"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/caj_agregar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text=""
            android:textSize="22dp"
            android:inputType="number"
            android:textColor="#000"/>

        <Button
            android:id="@+id/button_agregar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="+"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Salida:"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/caja_quitar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text=""
            android:inputType="number"
           android:textSize="22dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/button_quitar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="-"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>
