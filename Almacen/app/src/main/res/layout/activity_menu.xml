<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFA07A"
    tools:context="com.example.leonides.almacen.menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:src="@drawable/mercaditp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textColor="#AF2031"
            android:text="Bienbenido a su Mercadito"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/men_pedido"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@drawable/pedidos2" />

        <ImageButton
            android:id="@+id/men_almacen"
            android:layout_width="367dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.49"
            android:src="@drawable/almacen" />

    </LinearLayout>

</LinearLayout>
